pipeline {
    agent {
        label 'dev-node'
    }

    stages {
        stage('Unit Test') {
            steps {
                dir('book-manager-app'){
                    sh 'mvn surefire-report:report'
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Code Coverage') {
            steps {
                dir('book-manager-app'){
                    jacoco()
                }
            }
        }

        stage('Build') {
            steps {
                dir('book-manager-app'){
                    sh 'mvn clean package'
                }
            }
        }
        stage('Artifactory') {
            steps {
                dir('book-manager-app'){
                    sh 'mvn deploy'
                }
            }
        }
    }
}
